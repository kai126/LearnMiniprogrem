.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 自建 */
.container1 {
  background-color: #eee;
  height: 100vh;
  display: flex;
  /* 使用弹性盒子布局 */
  flex-direction: column;
  /* 使用列布局 */
  justify-content: space-around;
  /* 平均的占用垂直空间 */
  align-items: center;
  /* 元素垂直对齐 */
  position: relative;
}